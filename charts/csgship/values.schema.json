{
  "$schema": "http://json-schema.org/schema#",
  "title": "CSGShip Values Schema",
  "type": "object",
  "properties": {
    "global": {
      "type": "object",
      "description": "Global Configuration",
      "properties": {
        "gateway": {
          "type": "object",
          "description": "Gateway API configuration",
          "properties": {
            "controllerName": {
              "type": "string",
              "description": "GatewayClass controller name, e.g. envoy, istio, cilium"
            },
            "external": {
              "type": "object",
              "description": "External access configuration",
              "properties": {
                "domain": {
                  "type": "string",
                  "description": "Base external domain for Gateway routes"
                }
              }
            },
            "service": {
              "type": "object",
              "description": "Gateway Service configuration",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["LoadBalancer", "NodePort"],
                  "description": "Service type for Gateway"
                }
              }
            },
            "tls": {
              "type": "object",
              "description": "TLS configuration for Gateway",
              "properties": {
                "enabled": { "type": "boolean" },
                "secretName": { "type": "string" }
              }
            }
          }
        },
        "image": {
          "type": "object",
          "description": "Image management",
          "properties": {
            "registry": { "type": "string", "description": "Custom image registry (overrides local registry)" },
            "tag": { "type": "string", "description": "Image tag format: {{version}}-{{edition}}" },
            "pullPolicy": { "type": "string", "description": "Image pull policy: Always, IfNotPresent, Never" },
            "pullSecrets": { "type": "array", "items": { "type": "string" }, "description": "Private registry authentication secrets" }
          }
        },
        "persistence": {
          "type": "object",
          "description": "Persistent volume configuration",
          "properties": {
            "storageClass": { "type": "string", "description": "StorageClass name (empty for default)" },
            "accessModes": { "type": "array", "items": { "type": "string" }, "description": "Volume access modes" },
            "size": { "type": "string", "description": "Default storage capacity" }
          }
        },
        "postgresql": {
          "type": "object",
          "description": "PostgreSQL configuration",
          "properties": {
            "enabled": { "type": "boolean", "description": "Use built-in (true) or external (false)" },
            "external": {
              "type": "object",
              "description": "External PostgreSQL connection",
              "properties": {
                "host": { "type": "string", "description": "PostgreSQL host address" },
                "port": { "type": "integer", "description": "PostgreSQL port" },
                "user": { "type": "string", "description": "Database username" },
                "password": { "type": "string", "description": "Database password" },
                "timezone": { "type": "string", "description": "Database timezone" },
                "sslmode": { "type": "string", "description": "SSL mode" }
              }
            }
          }
        },
        "redis": {
          "type": "object",
          "description": "Redis configuration",
          "properties": {
            "enabled": { "type": "boolean", "description": "Use built-in (true) or external (false)" },
            "external": {
              "type": "object",
              "description": "External Redis configuration",
              "properties": {
                "host": { "type": "string", "description": "Redis server hostname or IP" },
                "port": { "type": "integer", "description": "Redis port number" },
                "password": { "type": "string", "description": "Redis authentication password" }
              }
            }
          }
        },
        "chartContext": {
          "type": "object",
          "description": "SubChart deployment context",
          "properties": {
            "isBuiltIn": { "type": "boolean", "description": "Deployed bundled with csghub" }
          }
        }
      }
    },
    "externalUrl": { "type": "string", "description": "External CSGHub URL for accessing the hub interface" },
    "gateway": {
      "type": "object",
      "description": "Gateway API enablement",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable or disable Gateway API"
        },
        "tls": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "secretName": { "type": "string" }
          }
        }
      }
    },
    "hubAPIToken": { "type": "string", "description": "API token for authenticating with CSGHub API" },
    "image": {
      "type": "object",
      "description": "Global image configuration",
      "properties": {
        "registry": { "type": "string", "description": "Docker registry" },
        "repository": { "type": "string", "description": "Image repository" },
        "tag": { "type": "string", "description": "Image version tag" },
        "pullPolicy": { "type": "string", "description": "Image pull policy: Always, IfNotPresent, Never" },
        "pullSecrets": { "type": "array", "items": { "type": "string" }, "description": "Docker registry secrets" }
      }
    },
    "web": {
      "type": "object",
      "description": "Web application configuration",
      "properties": {
        "name": { "type": "string" },
        "image": { "type": "object", "description": "Override image configuration", "additionalProperties": true },
        "ingress": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "annotations": { "type": "object", "additionalProperties": { "type": "string" } },
            "tls": { "type": "object", "additionalProperties": true }
          }
        },
        "oauth": { "type": "object", "additionalProperties": true },
        "postgresql": { "type": "object", "additionalProperties": true },
        "redis": { "type": "object", "additionalProperties": true },
        "persistence": { "type": "object", "additionalProperties": true }
      }
    },
    "agentic": {
      "type": "object",
      "properties": {
        "image": {
          "type": "object",
          "properties": {
            "repository": { "type": "string" },
            "tag": { "type": "string" }
          }
        }
      }
    },
    "billing": {
      "type": "object",
      "properties": {
        "image": {
          "type": "object",
          "properties": {
            "repository": { "type": "string" },
            "tag": { "type": "string" }
          }
        },
        "nats": { "type": "object", "additionalProperties": true }
      }
    },
    "frontend": {
      "type": "object",
      "properties": {
        "image": {
          "type": "object",
          "properties": {
            "repository": { "type": "string" },
            "tag": { "type": "string" }
          }
        }
      }
    },
    "megalinterServer": {
      "type": "object",
      "properties": {
        "image": {
          "type": "object",
          "properties": {
            "repository": { "type": "string" },
            "tag": { "type": "string" }
          }
        }
      }
    },
    "megalinterWorker": {
      "type": "object",
      "properties": {
        "image": {
          "type": "object",
          "properties": {
            "repository": { "type": "string" },
            "tag": { "type": "string" }
          }
        }
      }
    },
    "secscan": {
      "type": "object",
      "properties": {
        "image": {
          "type": "object",
          "properties": {
            "repository": { "type": "string" },
            "tag": { "type": "string" }
          }
        }
      }
    },
    "postgresql": {
      "type": "object",
      "properties": {
        "image": {
          "type": "object",
          "properties": {
            "registry": { "type": "string" },
            "repository": { "type": "string" },
            "tag": { "type": "string" },
            "pullPolicy": { "type": "string" },
            "pullSecrets": { "type": "array", "items": { "type": "string" } }
          }
        },
        "service": {
          "type": "object",
          "properties": {
            "type": { "type": "string" },
            "port": { "type": "integer" },
            "protocol": { "type": "string" }
          }
        },
        "databases": { "type": "array", "items": { "type": "string" } },
        "parameters": { "type": "object", "additionalProperties": true },
        "persistence": { "type": "object", "additionalProperties": true }
      }
    },
    "redis": {
      "type": "object",
      "properties": {
        "image": {
          "type": "object",
          "properties": {
            "registry": { "type": "string" },
            "repository": { "type": "string" },
            "tag": { "type": "string" },
            "pullPolicy": { "type": "string" },
            "pullSecrets": { "type": "array", "items": { "type": "string" } }
          }
        },
        "service": {
          "type": "object",
          "properties": {
            "type": { "type": "string" },
            "port": { "type": "integer" },
            "protocol": { "type": "string" }
          }
        },
        "requirePass": { "type": "boolean" },
        "persistence": { "type": "object", "additionalProperties": true }
      }
    },
    "casdoor": {
      "type": "object",
      "properties": {
        "admin": { "type": "object", "additionalProperties": true },
        "image": {
          "type": "object",
          "properties": {
            "registry": { "type": "string" },
            "repository": { "type": "string" },
            "tag": { "type": "string" },
            "pullPolicy": { "type": "string" },
            "pullSecrets": { "type": "array", "items": { "type": "string" } }
          }
        },
        "service": {
          "type": "object",
          "properties": {
            "type": { "type": "string" },
            "port": { "type": "integer" },
            "protocol": { "type": "string" }
          }
        },
        "ingress": { "type": "object", "additionalProperties": true },
        "postgresql": { "type": "object", "additionalProperties": true }
      }
    }
  }
}