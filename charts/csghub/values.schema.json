{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CSGHUB Values Schema",
  "type": "object",
  "properties": {
    "global": {
      "type": "object",
      "description": "Global Configuration",
      "properties": {
        "edition": {
          "type": "string",
          "description": "Deployment edition: \"ce\" (Community) or \"ee\" (Enterprise)"
        },
        "gateway": {
          "type": "object",
          "description": "Gateway configuration",
          "properties": {
            "controllerName": {"type": "string"},
            "service": {
              "type": "object",
              "properties": {
                "type": {"type": "string"},
                "nodePorts": {"type": "object", "additionalProperties": {"type": "integer"}}
              }
            },
            "external": {
              "type": "object",
              "properties": {
                "domain": {"type": "string"},
                "public": {"type": "string"}
              }
            },
            "tls": {
              "type": "object",
              "properties": {
                "enabled": {"type": "boolean"},
                "secretName": {"type": "string"}
              }
            }
          }
        },
        "image": {
          "type": "object",
          "properties": {
            "registry": {"type": "string"},
            "registryPolicy": {"type": "string"},
            "tag": {"type": "string"},
            "pullPolicy": {"type": "string"},
            "pullSecrets": {"type": "array", "items": {"type": "string"}}
          }
        },
        "persistence": {
          "type": "object",
          "properties": {
            "storageClass": {"type": "string"},
            "accessModes": {"type": "array", "items": {"type": "string"}},
            "size": {"type": "string"}
          }
        },
        "postgresql": {
          "type": "object",
          "properties": {
            "enabled": {"type": "boolean"},
            "external": {"type": "object", "additionalProperties": true}
          }
        },
        "redis": {
          "type": "object",
          "properties": {
            "enabled": {"type": "boolean"},
            "external": {"type": "object", "additionalProperties": true}
          }
        },
        "mongo": {
          "type": "object",
          "properties": {
            "enabled": {"type": "boolean"},
            "external": {"type": "object", "additionalProperties": true}
          }
        },
        "objectStore": {
          "type": "object",
          "properties": {
            "enabled": {"type": "boolean"},
            "external": {"type": "object", "additionalProperties": true}
          }
        },
        "registry": {
          "type": "object",
          "properties": {
            "enabled": {"type": "boolean"},
            "external": {"type": "object", "additionalProperties": true}
          }
        },
        "gitaly": {
          "type": "object",
          "properties": {
            "enabled": {"type": "boolean"},
            "external": {"type": "object", "additionalProperties": true}
          }
        },
        "dataflow": {
          "type": "object",
          "properties": {
            "enabled": {"type": "boolean"},
            "external": {"type": "object", "additionalProperties": true}
          }
        },
        "chartContext": {
          "type": "object",
          "properties": {
            "isBuiltIn": {"type": "boolean"}
          }
        }
      }
    },
    "image": {
      "type": "object",
      "properties": {
        "registry": {"type": "string"},
        "repository": {"type": "string"},
        "tag": {"type": "string"},
        "pullPolicy": {"type": "string"},
        "pullSecrets": {"type": "array", "items": {"type": "string"}}
      }
    },
    "logging": {"type": "object", "additionalProperties": true},
    "environments": {"type": "object", "additionalProperties": true},
    "portal": {
      "type": "object",
      "properties": {
        "image": {"type": "object", "additionalProperties": true},
        "gateway": {"type": "object", "additionalProperties": true},
        "docs": {"type": "object", "additionalProperties": true},
        "postgresql": {"type": "object", "additionalProperties": true},
        "objectStore": {"type": "object", "additionalProperties": true}
      }
    },
    "server": {
      "type": "object",
      "properties": {
        "image": {"type": "object", "additionalProperties": true},
        "gitlabShell": {"type": "object", "additionalProperties": true},
        "multiSync": {"type": "object", "additionalProperties": true},
        "swaggerAPI": {"type": "object", "additionalProperties": true},
        "agent": {"type": "object", "additionalProperties": true},
        "csgbot": {"type": "object", "additionalProperties": true},
        "memory": {"type": "object", "additionalProperties": true},
        "postgresql": {"type": "object", "additionalProperties": true},
        "redis": {"type": "object", "additionalProperties": true},
        "objectStore": {"type": "object", "additionalProperties": true},
        "xnet": {"type": "object", "additionalProperties": true}
      }
    },
    "rproxy": {
      "type": "object",
      "properties": {
        "coredns": {"type": "object", "additionalProperties": true},
        "nginx": {"type": "object", "additionalProperties": true}
      }
    },
    "notifier": {"type": "object", "additionalProperties": true},
    "payment": {"type": "object", "additionalProperties": true},
    "gateway": {
      "type": "object",
      "properties": {
        "aigateway": {"type": "object", "additionalProperties": true},
        "moderation": {"type": "object", "additionalProperties": true}
      }
    },
    "xnet": {
      "type": "object",
      "properties": {
        "image": {"type": "object", "additionalProperties": true},
        "service": {"type": "object", "additionalProperties": true},
        "postgresql": {"type": "object", "additionalProperties": true},
        "redis": {"type": "object", "additionalProperties": true},
        "objectStore": {"type": "object", "additionalProperties": true}
      }
    },
    "runner": {
      "type": "object",
      "properties": {
        "enabled": {"type": "boolean"},
        "region": {"type": "string"},
        "interval": {"type": "integer"},
        "namespace": {"type": "string"},
        "autoConfigure": {"type": "boolean"},
        "mergingNamespace": {"type": "string"},
        "usePublicDomain": {"type": "boolean"},
        "pipIndexUrl": {"type": "string"},
        "extraBuildArgs": {"type": "array", "items": {"type": "string"}},
        "model": {"type": "object", "additionalProperties": true},
        "gpuModelLabel": {"type": "object", "additionalProperties": true},
        "applicationEndpoint": {"type": "string"},
        "networkInterface": {"type": "string"},
        "knative": {"type": "object", "additionalProperties": true},
        "logcollector": {"type": "object", "additionalProperties": true},
        "gateway": {"type": "object", "additionalProperties": true},
        "reloader": {"type": "object", "additionalProperties": true},
        "prometheus": {"type": "object", "additionalProperties": true}
      }
    }
  },
  "additionalProperties": true
}